    cursor: not-allowed;
}

.zap-send-btn.active {
    opacity: 1;
    box-shadow: 0 4px 20px rgba(168, 85, 247, 0.5);
}

.zap-send-btn.active:hover {
    transform: scale(1.08);
    box-shadow: 0 6px 24px rgba(168, 85, 247, 0.6);
}

/* Animations */
@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Responsive */
@media (max-width: 768px) {
    .zap-welcome {
        padding: 0 20px;
    }

    .zap-title {
        font-size: 1.8rem;
    }

    .zap-input-wrapper {
        padding: 12px;
        padding-bottom: 20px;
    }

    .zap-input-container {
        border-radius: 20px;
