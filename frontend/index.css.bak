}

\n\n

/* Log Entry */
\n.thinking-log {
    \n color: var(--text-muted);
    \n line-height: 1.6;
    \n
}

\n\n.thinking-log .highlight {
    \n color: var(--color-cyan);
    \n
}

\n\n

/* Skeleton Loader */
\n.skeleton-loader {
    \n display: flex;
    \n flex-direction: column;
    \n gap: 8px;
    \n
}

\n\n.skeleton-line {
    \n height: 12px;
    \n background: linear-gradient(90deg, \n var(--bg-surface) 0%, \n var(--bg-hover) 50%, \n var(--bg-surface) 100%);
    \n background-size: 200% 100%;
    \n animation: shimmer 1.5s infinite;
    \n border-radius: 4px;
    \n
}

\n\n.skeleton-line:nth-child(1) {
    width: 80%;
}

\n.skeleton-line:nth-child(2) {
    width: 60%;
}

\n.skeleton-line:nth-child(3) {
    width: 70%;
}

\n\n@keyframes shimmer {
    \n 0% {
        background-position: 200% 0;
    }

    \n 100% {
        background-position: -200% 0;
    }

    \n
}

\n\n

/* Source Pills - Sites being consulted */
\n.source-pills {
    \n display: flex;
    \n flex-wrap: wrap;
    \n gap: 8px;
    \n margin-top: 12px;
    \n
}

\n\n.source-pill {
    \n display: flex;
    \n align-items: center;
    \n gap: 6px;
    \n background: var(--bg-surface);
    \n border: 1px solid var(--glass-border);
    \n border-radius: 20px;
    \n padding: 6px 12px;
    \n font-size: 0.75rem;
    \n color: var(--text-secondary);
    \n animation: fadeIn 0.3s ease-out;
    \n
}

\n\n.source-pill img {
    \n width: 14px;
    \n height: 14px;
    \n border-radius: 2px;
    \n
}

\n\n@keyframes fadeIn {
    \n from {
        opacity: 0;
        transform: translateY(5px);
    }

    \n to {
        opacity: 1;
        transform: translateY(0);
    }

    \n
}

\n\n

/* Action Buttons - Developer Console Style */
\n.thinking-actions {
    \n display: flex;
    \n gap: 12px;
    \n margin-top: 16px;
    \n padding-top: 12px;
    \n border-top: 1px solid var(--glass-border);
    \n
}

\n\n.action-btn {
    \n font-family: 'SF Mono', 'Fira Code', monospace;
    \n font-size: 0.75rem;
    \n padding: 8px 16px;
    \n border-radius: 8px;
    \n border: 1px solid var(--glass-border);
    \n background: transparent;
    \n color: var(--text-secondary);
    \n cursor: pointer;
    \n transition: all var(--transition-liquid);
    \n text-transform: uppercase;
    \n letter-spacing: 0.05em;
    \n
}

\n\n.action-btn:hover {
    \n background: var(--bg-hover);
    \n color: var(--text-primary);
    \n border-color: var(--color-cyan);
    \n
}

\n\n.action-btn.primary {
    \n background: var(--color-emerald);
    \n border-color: var(--color-emerald);
    \n color: #050505;
    \n
}

\n\n.action-btn.primary:hover {
    \n box-shadow: var(--shadow-glow-emerald);
    \n
}